<%= simple_form_for @contribution, wrapper: :bootstrap3_horizontal, defaults: {right_column_html: {class: "col-lg-3 col-md-3"}, label_html: {class: "col-lg-2 col-md-2"} }, :html => {:class => 'form-horizontal', :role => "form"} do |form| %>
  <%= form.input :title, label: t("events.new.form.title"), placeholder: t("events.new.form.title_placeholder") %>
  <%= form.input :body, label: t("events.new.form.body"), placeholder: t("events.new.form.body_placeholder") %>
  <%= form.input :repo_name, label: t("events.new.form.repo_name"), placeholder: t("events.new.form.repo_name_placeholder") %>
  <%= form.input :issue_url, label: t("events.new.form.issue_url"), placeholder: t("events.new.form.issue_url_placeholder") %>
  <%= form.input :created_at, label: t("events.new.form.created_at"), as: :string, input_html: { class: "js-datetimepicker" } %>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10 col-md-4">
      <%= form.submit t("contributions.new.save"), class: "btn btn-default" %>
    </div>
  </div>
<% end %>
